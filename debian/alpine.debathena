#!/bin/bash

arg=()
case "$(hesinfo "${ATHENA_USER:-$USER}" pobox 2>/dev/null | cut -d' ' -f2)" in
    *EXCHANGE*) arg=(-disable-these-authenticators=GSSAPI) ;;
esac

if ! klist -s; then
    arg=(-disable-these-authenticators=GSSAPI)
fi

: ${ATHENA_USER=$USER}
export ATHENA_USER

exec "alpine.debathena-orig" "${arg[@]}" "$@"
